/* pages/login/login.wxss */
page {
  width: 100%;
  height: 100%;
}
.login {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 0 60rpx 240rpx 60rpx;
  box-sizing: border-box;
}
.login-head {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 0 30rpx 0;
  padding: 0 0 40rpx 0;
  border-bottom: 2rpx solid #cdcecd;
  box-sizing: border-box;
}
.login-head .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}
.login-head .userName {
  font-size: 36rpx;
  margin-top: 20rpx;
}
.login-main {
  text-align: center;
}
.login-main .title {
  font-size: 36rpx;
  color: #585858;
}
.login-main .explain {
  font-size: 24rpx;
  margin-top: 20rpx;
  color: #b0b0b0;
}
.login-footer {
  margin-top: 80px;
}
.login-footer .btn {
  width: 100%;
  font-size: 36rpx;
  font-weight: normal;
  border: 0;
  color: #fff;
  background: linear-gradient(to right, #a4dd90, #69c48d);
}
.login-footer .btn::after {
  border: 0;
}
